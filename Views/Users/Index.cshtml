@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <a asp-action="Create" class="btn btn-success mb-3">Add New User</a>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Age</th>
                    <th scope="col">Sex</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Active</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Firstname</td>
                        <td>@user.Surname</td>
                        <td>@user.Age</td>
                        <td>@user.Sex</td>
                        <td>@user.Mobile</td>
                        <td>@user.Active</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .table thead th {
        background-color: #343a40;
        color: #fff;
    }

    .btn {
        margin-right: 5px;
    }

        .btn:last-child {
            margin-right: 0;
        }
</style>
